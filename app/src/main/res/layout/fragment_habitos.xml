<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HabitosFragment"
    android:padding="32dp"
    android:background="#F5F7FA">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/passo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Passo 2/3: Hábitos de Sono"
        android:textColor="#1F2937"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passo2"
        app:layout_constraintBottom_toTopOf="@+id/bt_next_habits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Em média, quantas horas você dorme por noite?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/spinner_hora"
                android:padding="12dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Você consome cafeína (café, chás, refrigerantes) após as 16h?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/uso_cafeina_noite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sim, eu consumo cafeína no período da tarde/noite."
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Você pratica exercícios físicos intensos 3 horas antes de dormir?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/exercicio_noite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sim, eu me exercito próximo à hora de dormir."
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_next_habits"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Próximo Passo"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        android:backgroundTint="#10B981"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>