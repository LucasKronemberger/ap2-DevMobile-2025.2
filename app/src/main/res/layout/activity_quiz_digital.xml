<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizDigitalActivity"
    android:background="#F5F7FA"
    android:padding="32dp">

    <TextView
        android:id="@+id/passo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Passo 1/4: Seu mundo digital"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passo1"
        app:layout_constraintBottom_toTopOf="@+id/bt_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- pergunta 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Quanto tempo antes de dormir você para de usar telas (celular, tablet, TV)?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/tempo_de_tela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <RadioButton
                    android:id="@+id/rb_tela1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mais de 60 minutos" />
                <RadioButton
                    android:id="@+id/rb_tela2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 a 60 minutos" />
                <RadioButton
                    android:id="@+id/rb_tela3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menos de 30 minutos" />
                <RadioButton
                    android:id="@+id/rb_tela4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uso até cair no sono" />
            </RadioGroup>

            <!-- pergunta 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Você silencia notificações do celular durante a noite?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <Switch
                android:id="@+id/notificacao_silenciada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Não"
                android:textOn="Sim"

                android:layout_marginBottom="24dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <!-- TODO: Adicionar mais perguntas aqui -->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Próximo Passo"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        android:backgroundTint="#10B981"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>